{
  "compilerOptions": {
    "plugins": [
      { "transform": "./transformers/add-jsdoc.ts" },
      { "transform": "./transformers/remove-types.ts", "type": "raw" },
      { "transform": "./transformers/imports.ts", "type": "raw" }
    ],
    "module": "esnext",
    "lib": [
      "ES6",
      "ES2016.Array.Include",
      "ES2017.Object",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ES2019",
    "baseUrl": ".",
    "removeComments": false,
    "paths": {
      "scripts/*": ["./src/scripts/*"],
      "types/*": ["./types/*"]
    },
    "typeRoots": ["types", "node_modules/@types"],
    "outDir": "dist/"
  },
  "include": ["src/**/*.ts"],
  "jsdoc": "jsdoc/out"
}
