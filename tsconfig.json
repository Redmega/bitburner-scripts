{
  "compilerOptions": {
    "plugins": [{ "transform": "./transformers/add-jsdoc.ts" }],
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "ES6",
      "ES2016.Array.Include",
      "ES2017.Object",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ES2019",
    "baseUrl": ".",
    "removeComments": false,
    "paths": {
      "/scripts/*.js": ["./src/scripts/*"]
    },
    "typeRoots": ["./types", "node_modules/@types"],
    "outDir": "dist/",
    "rootDir": "src/"
  },
  "include": ["src/**/*.ts"],
  "jsdoc": "jsdoc/out"
}
